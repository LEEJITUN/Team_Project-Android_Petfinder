<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Findertalk_findingMyPet_details_Activity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- tool bar -->
            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar_orange" />

            <Button
                android:id="@+id/btn_Back"
                android:layout_width="35dp"
                android:layout_marginTop="12dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_baseline_keyboard_arrow_left_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/jalnanotf"
                android:gravity="center_horizontal"
                android:text="상세보기"
                android:textColor="@color/white"
                android:textSize="30dp" />


        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_calender"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/jalnan"
            android:text="임보/입양"
            android:textColor="@color/black" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/jalnan"
            android:text="커뮤니티" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/jalnan"
            android:text="가족 찾는 중"
            android:textColor="@color/orange_june" />

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        card_view:cardElevation="5dp"
        android:layout_gravity="center"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <!-- 펫 이미지 크기조정은 centerCrop -->
            <ImageView
                android:id="@+id/cardview_imageview"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/tory2" />

            <!-- 펫 이름은 펫이미지에 대해layout_toRightOf cardview_content이였다-->


            <!-- tool로 수정필요함-->


            <TextView
                android:id="@+id/finding_mypet_content_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardview_imageview"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/jalnan"
                android:layout_marginLeft="30dp"
                android:text="이름: 토리" />

            <TextView
                android:id="@+id/finding_mypet_content_pumjong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/finding_mypet_content_name"
                android:fontFamily="@font/jalnan"
                android:layout_marginLeft="30dp"
                android:text="품종: [개] 시바이누" />
            <TextView
                android:id="@+id/finding_mypet_content_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/finding_mypet_content_pumjong"
                android:text="실종일: 2021-09-30"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/jalnan"/>
            <TextView
                android:id="@+id/finding_mypet_content_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/finding_mypet_content_date"
                android:text="실종 위치: 5단지 올리브 옆"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/jalnan"/>
            <TextView
                android:id="@+id/finding_mypet_content_color"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/finding_mypet_content_place"
                android:text="색상: 황갈색"
                android:fontFamily="@font/jalnan"/>
            <TextView
                android:id="@+id/finding_mypet_content_age"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/finding_mypet_content_color"
                android:text="나이: 2018년생"
                android:fontFamily="@font/jalnan"/>
            <TextView
                android:id="@+id/finding_mypet_content_weight"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/finding_mypet_content_age"
                android:text="체중: 11kg"
                android:fontFamily="@font/jalnan"/>
            <TextView
                android:id="@+id/finding_mypet_content_sex"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/finding_mypet_content_weight"
                android:text="성별: 수"
                android:fontFamily="@font/jalnan"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>