<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!-- This xml is connected to activity_findertalk_findmypet -->
    <!-- 이 형태로 복제가 되어서 activity_findertalk_findmypet에 렌더링 -->
    <!-- 터치영역 관련해서 코드 추가해야함 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- tool bar -->
            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar_sky" />

            <Button
                android:id="@+id/btn_Back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/ic_baseline_keyboard_arrow_left_24"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/jalnanotf"
                android:gravity="center_horizontal"
                android:text="다이어리"
                android:textColor="@color/white"
                android:textSize="30dp" />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            card_view:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/myProfile"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="13dp"
                        android:src="@drawable/ic_baseline_person_24" />

                    <TextView
                        android:id="@+id/inputName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@+id/myProfile"
                        android:fontFamily="@font/jalnanotf"
                        android:text="류수민" />

                    <TextView
                        android:id="@+id/input_Date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:layout_toRightOf="@+id/myProfile"
                        android:fontFamily="@font/jalnanotf"
                        android:text="2021.10.19 14:49"
                        android:textSize="12dp" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="370dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/white"
                        android:src="@drawable/ic_baseline_more_horiz_24" />

                </RelativeLayout>

                <!-- 펫 이미지 크기조정은 centerCrop -->
                <ImageView
                    android:id="@+id/cardview_imageview"
                    android:layout_width="280dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="false"
                    android:layout_marginTop="65dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tory2" />

                <TextView
                    android:id="@+id/cardview_content_name"
                    android:layout_width="286dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cardview_imageview"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/jalnan"
                    android:text="[개] 시바이누" />
                <!-- 이미지 밑에 layout_below 글을 두겠다  -->

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>