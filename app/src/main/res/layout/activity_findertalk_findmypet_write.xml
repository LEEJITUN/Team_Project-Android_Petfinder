<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- tool bar -->
            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar_orange" />

            <Button
                android:id="@+id/btn_Back"
                android:layout_width="35dp"
                android:layout_marginTop="12dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_baseline_keyboard_arrow_left_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/jalnanotf"
                android:gravity="center_horizontal"
                android:text="새 글 작성"
                android:textColor="@color/white"
                android:textSize="30dp" />


        </RelativeLayout>

        <!-- 이름 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/jalnan"
                android:text="이름 "
                android:textColor="@color/down_gray"
                android:textSize="18dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp">

                <EditText
                    android:id="@+id/inputPetName"
                    android:layout_width="300dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="18dp"
                    android:background="@drawable/round"
                    android:ems="10"
                    android:fontFamily="@font/micross" />
            </RelativeLayout>
        </LinearLayout>

        <!-- 펫 종류 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/jalnan"
                android:text="펫 종류   "
                android:textColor="@color/down_gray"
                android:textSize="18dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_more_navi_petkind"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="250dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_baseline_keyboard_arrow_down_24"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/inputPetKind"
                    android:layout_width="300dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="18dp"
                    android:background="@drawable/round"
                    android:ems="10"
                    android:fontFamily="@font/micross" />

            </RelativeLayout>

        </LinearLayout>

        <!-- 품종 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/jalnan"
                android:text="품종"
                android:textColor="@color/down_gray"
                android:textSize="18dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="37dp">

                <Button
                    android:id="@+id/btn_more_navi_petBreed"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="251dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_baseline_keyboard_arrow_down_24"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/inputPetBreed"
                    android:layout_width="300dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="18dp"
                    android:background="@drawable/round"
                    android:ems="10"
                    android:fontFamily="@font/micross" />


            </RelativeLayout>

        </LinearLayout>


        <!-- 실종일 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/jalnan"
                android:text="실종일    "
                android:textColor="@color/down_gray"
                android:textSize="18dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_more_navi_petmissing"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="250dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_baseline_keyboard_arrow_down_24"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/inputPetMissing"
                    android:layout_width="300dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="18dp"
                    android:background="@drawable/round"
                    android:ems="10"
                    android:fontFamily="@font/micross" />

            </RelativeLayout>

        </LinearLayout>

        <!-- 실종 위치 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/jalnan"
                android:text="실종위치"
                android:textColor="@color/down_gray"
                android:textSize="18dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/inputPetMissingLocation"
                    android:layout_width="300dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="18dp"
                    android:background="@drawable/round"
                    android:ems="10"
                    android:fontFamily="@font/micross"
                    tools:ignore="SpeakableTextPresentCheck" />

            </RelativeLayout>

        </LinearLayout>

        <!-- 색상 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/jalnan"
                android:text="색상"
                android:textColor="@color/down_gray"
                android:textSize="18dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="37dp">

                <Button
                    android:id="@+id/btn_more_navi_petColor"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="251dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_baseline_keyboard_arrow_down_24"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/inputPetColor"
                    android:layout_width="300dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="18dp"
                    android:background="@drawable/round"
                    android:ems="10"
                    android:fontFamily="@font/micross" />


            </RelativeLayout>

        </LinearLayout>

        <!-- 색상 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/jalnan"
                android:text="나이"
                android:textColor="@color/down_gray"
                android:textSize="18dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="37dp">

                <Button
                    android:id="@+id/btn_more_navi_petAge"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="251dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_baseline_keyboard_arrow_down_24"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/inputPetAge"
                    android:layout_width="300dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="18dp"
                    android:background="@drawable/round"
                    android:ems="10"
                    android:fontFamily="@font/micross" />


            </RelativeLayout>

        </LinearLayout>

        <!-- 체중 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/jalnan"
                android:text="체중 "
                android:textColor="@color/down_gray"
                android:textSize="18dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp">

                <TextView
                    android:id="@+id/inputPetWeight"
                    android:layout_width="300dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="18dp"
                    android:background="@drawable/round"
                    android:ems="10"
                    android:fontFamily="@font/micross" />

            </RelativeLayout>
        </LinearLayout>





        <!-- 성별 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/jalnan"
                android:text="성별"
                android:textColor="@color/down_gray"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 라디오 버튼 -->
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:columnCount="1"
                    android:rowCount="2">

                    <!-- 라디오 버튼 윗줄 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <RadioButton
                            android:id="@+id/radio_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:fontFamily="@font/jalnan"
                            android:minHeight="48dp"
                            android:onClick="onRadioButtonClicked"
                            android:text="모름"
                            android:textColor="@color/down_black"
                            android:textSize="18dp" />

                        <RadioButton
                            android:id="@+id/radio_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:fontFamily="@font/jalnan"
                            android:minHeight="48dp"
                            android:onClick="onRadioButtonClicked"
                            android:text="수컷"
                            android:textColor="@color/down_black"
                            android:textSize="18dp" />

                        <RadioButton
                            android:id="@+id/radio_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:fontFamily="@font/jalnan"
                            android:minHeight="48dp"
                            android:onClick="onRadioButtonClicked"
                            android:text="암컷"
                            android:textColor="@color/down_black"
                            android:textSize="18dp" />

                    </LinearLayout>

                    <!-- 라디오 버튼 아랫줄 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <RadioButton
                            android:id="@+id/radio_male_neutering"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:fontFamily="@font/jalnan"
                            android:onClick="onRadioButtonClicked"
                            android:text="중성화수컷"
                            android:textColor="@color/down_black"
                            android:textSize="18dp" />

                        <RadioButton
                            android:id="@+id/radio_female_neutering"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:fontFamily="@font/jalnan"
                            android:onClick="onRadioButtonClicked"
                            android:text="중성화암컷"
                            android:textColor="@color/down_black"
                            android:textSize="18dp" />
                    </LinearLayout>

                </GridLayout>
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
</ScrollView>