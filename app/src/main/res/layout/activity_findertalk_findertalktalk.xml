<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<!-- Title Bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#F39C12">
        <!-- arrow back -->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_baseline_arrow_back_24" />
        <!-- Title  -->
        <TextView
            android:layout_width="239dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="핀더톡"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:fontFamily="@font/jalnan"/>

        <!-- Switch -->
        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:text="My"
            android:fontFamily="@font/jalnan"
            android:textColor="@android:color/white"/>
        <!-- Write -->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_baseline_create_24" />


    </LinearLayout><!-- Title Bar End-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Tab Menu -->
        <TabHost
            android:id="@android:id/tabhost"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"></TabWidget>

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:id="@+id/findertalktalk"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#f00000"
                        android:orientation="vertical"
                        android:fontFamily="@font/jalnan">
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/findmypet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#f0f000"
                        android:orientation="vertical"
                        android:fontFamily="@font/jalnan">
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

        </TabHost>
    </LinearLayout>

    <View
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="410dp"
        android:layout_height="1dp"
        android:background="#707070">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <!-- A CardView that contains a TextView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="350dp"
            android:layout_height="107dp"
            android:layout_gravity="center"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="재미있는 표정/포즈 콘테스트~"
                    android:textSize="14sp"
                    android:fontFamily="@font/jalnan">

                </TextView>

                <TextView
                    android:id="@+id/name_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="순간 포착 재미있는 표정/포즈 콘테스트"
                    android:textSize="14sp">

                </TextView>

                <TextView
                    android:id="@+id/name_content2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="혼자 보기에는 아까운 아이의 재미있는"
                    android:textSize="14sp">


                </TextView>

                <TextView
                    android:id="@+id/name_content3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" 표정과 포즈 사진을 같이 공유해요"
                    android:textSize="14sp">


                </TextView>

                <!--                <androidx.recyclerview.widget.RecyclerView-->
                <!--                    android:id="@+id/Recyclerdata"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="match_parent"-->
                <!--                    android:textSize="32sp" />-->
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical">

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:text=">" />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <!-- A CardView that contains a TextView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view2"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="우리 아이 자랑하기!"
                    android:textSize="14sp"
                    android:fontFamily="@font/jalnan">

                </TextView>

                <TextView
                    android:id="@+id/name_content4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="눈에 넣어도 아프지 않은 우리 아이 사진"
                    android:textSize="14sp">

                </TextView>

                <TextView
                    android:id="@+id/name_content5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="을 자랑해 주세요~"
                    android:textSize="14sp">


                </TextView>

                <TextView
                    android:id="@+id/name_content6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" 너무 귀여운 아이 사진들 보면서"
                    android:textSize="14sp">

                </TextView>

                <TextView
                    android:id="@+id/name_content7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="우리 같이 힐링해요"
                    android:textSize="14sp">

                </TextView>

                <!--                <androidx.recyclerview.widget.RecyclerView-->
                <!--                    android:id="@+id/Recyclerdata"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="match_parent"-->
                <!--                    android:textSize="32sp" />-->
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:gravity="right|center_vertical">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:text=">" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>