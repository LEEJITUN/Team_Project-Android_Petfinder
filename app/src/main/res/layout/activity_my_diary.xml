<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyDiaryWriteFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- tool bar -->
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_sky" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_Back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_baseline_keyboard_arrow_left_24"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:layout_width="350dp"
                android:layout_height="34dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/jalnanotf"
                android:gravity="center_horizontal"
                android:text="다이어리 등록"
                android:textColor="@color/white"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/jalnanotf"
                android:text="사진추가 (최대 3장)" />

            <Button
                android:id="@+id/btnPicture"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_baseline_add_to_photos_24" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="350dp"
                android:layout_height="392dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round"
                android:fontFamily="@font/jalnan"
                android:hint="반려동물과 어떤 하루를 보냈나요? :)"
                android:padding="15dp" />

            <!-- Button - 확인 버튼 -->
            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/basicbutton_sky"
                android:fontFamily="@font/jalnan"
                android:text="등록"
                android:textColor="@color/white"
                android:textSize="30dp"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>